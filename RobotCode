    {
        if(analog(frontSensor) < 3900)
        {
            mav(leftMotor, -400);
            mav(rightMotor, 600);
        }
        if(analog(frontSensor) > 3900)
        {
            mav(leftMotor, -640);
            mav(rightMotor, 400);
        }
    }
    ao();
    mav(leftMotor, -640);
    mav(rightMotor, 600);
    msleep(500);
    ao();

    while(analog(topSensor) > 1500)
    {
        if(analog(frontSensor) < 3900)
        {
            mav(leftMotor, -400);
            mav(rightMotor, 600);
        }
        if(analog(frontSensor) > 3900)
        {
            mav(leftMotor, -640);
            mav(rightMotor, 400);
        }
    }

    ao();
    go_to_pos(sideServo, 1800);
    ao();
    mav(leftMotor, -640);
    mav(rightMotor, -600);
    msleep(50);

    //move to ramp

    set_servo_position(sideServo, 1700);
    mav(leftMotor, 640);
    mav(rightMotor, -600);
    msleep(8000);
    ao();
    go_to_pos(frontServo, 800);
    while((digital(leftBumper) == 0) || (digital(rightBumper) == 0))
