        mav(rightMotor, -600);
    }
    ao();
    go_to_pos(frontServo, 100);
    ao();
    mav(leftMotor, -640);
    mav(rightMotor, 620);
    msleep(200);
    ao();
    mav(leftMotor, -640);
    mav(rightMotor, -620);
    msleep(1800);

    //orientation to go up ramp

    while((digital(leftFrontBumper) == 0) || (digital(rightFrontBumper) == 0))
    {
        mav(leftMotor, -640);
        mav(rightMotor, 620);
    }
    mav(leftMotor, 640);
    mav(rightMotor, -620);
    msleep(1200);
    mav(leftMotor, 640);
    mav(rightMotor, 620);
    msleep(1700);
    while((digital(leftBumper) == 0) || (digital(rightBumper) == 0))
    {
        mav(leftMotor, 640);
        mav(rightMotor, -620);
    }
    while(analog(frontSensor) < ramp)
    {
        motor(leftMotor, -45);
        motor(rightMotor, 40);
    }
    ao();
    mav(leftMotor, 300);
    mav(rightMotor, 300);
    msleep(200);
    ao();
    go_to_pos(frontServo, 800);
    ao();
    while(frontLever < 1)
    {
        if(analog(frontSensor) < rampLine)
        {
            mav(leftMotor, -400);
            mav(rightMotor, 600);
        }
        if(analog(frontSensor) > rampLine)
        {
            mav(leftMotor, -640);
            mav(rightMotor, 400);
        }
    }
    mav(leftMotor, 600);
    mav(rightMotor, -600);
    msleep(500);

    //turning left onto cliff platform

    motor(leftMotor, 67);
    motor(rightMotor, 60);
    msleep(1150);
    motor(leftMotor, -67);
    motor(rightMotor, 60);
    msleep(600);

    //preparing claw

    go_to_pos(frontServo, 1200);
    set_servo_position(sideServo, 1960);
    go_to_pos(clawServo, openClaw);


    //moving towards Titanium Oxide

    while(analog(topSensor) < cliffValue)
    {
        if(analog(frontSensor) < topLine)
        {
            motor(leftMotor, -67);
            motor(rightMotor, 40);
        }
        if(analog(frontSensor) > topLine)
        {
            motor(leftMotor, -45);
            motor(rightMotor, 60);
        }
    }
    mav(leftMotor, -300);
    mav(rightMotor, -300);
    msleep(100);
    mav(leftMotor, -300);
    mav(rightMotor, 300);
    msleep(1500);
    ao();
    go_to_pos(frontServo, 2000);
    go_to_pos(clawServo, closeClaw);
    return 0;
}
